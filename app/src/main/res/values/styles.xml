<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseButton">
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="BaseButtonContent">
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BaseButton.ButtonWrap" parent="BaseButton">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>


    <style name="BaseButton.ButtonSmallWrap" parent="BaseButton">
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="BaseButton.EditTextWrap" parent="BaseButton">
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="BaseButtonContent.ContentWrap" parent="BaseButtonContent">
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="BaseButton.ButtonWrap.GreyEditText12" parent="BaseButton.EditTextWrap">
        <item name="android:background">@drawable/ripple_background_corner_grey_12</item>

    </style>
    <style name="BaseButtonContent.ContentWrap.GreyContent5" parent="BaseButtonContent.ContentWrap">
        <item name="android:background">@drawable/ripple_background_corner_grey_5</item>

    </style>

    <style name="BaseButton.ButtonWrap.BlueRadius16" parent="BaseButton.ButtonWrap">
        <item name="android:background">@drawable/ripple_background_corner_blue_light_16</item>

    </style>

    <style name="BaseButton.ButtonWrap.BlueRadius10" parent="BaseButton.ButtonWrap">
        <item name="android:background">@drawable/ripple_background_corner_blue_10</item>
    </style>
    <style name="BaseButton.ButtonWrap.RedRadius10" parent="BaseButton.ButtonSmallWrap">
        <item name="android:background">@drawable/ripple_background_corner_red_10</item>
    </style>
    <style name="BaseButton.ButtonWrap.BlueRadius5" parent="BaseButton.ButtonWrap">
        <item name="android:background">@drawable/ripple_background_corner_blue_5</item>
    </style>
    <style name="BaseButton.ButtonWrap.BlueDarkRadius5" parent="BaseButton.ButtonWrap">
        <item name="android:background">@drawable/ripple_background_corner_blue_dark_5</item>
    </style>
    <style name="BaseButton.ButtonWrap.BlueRadius7" parent="BaseButton.ButtonWrap">
        <item name="android:background">@drawable/ripple_background_corner_blue_7</item>
    </style>

    <style name="BaseButton.ButtonWrap.RedRadius16" parent="BaseButton.ButtonWrap">
        <item name="android:background">@drawable/ripple_background_corner_red_light_16</item>
    </style>

    <style name="TabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>